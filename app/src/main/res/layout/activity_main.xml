<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="4dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size" />
        </FrameLayout>
    </FrameLayout>

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_padding_16"
        android:layout_marginTop="@dimen/layout_margin_padding_16"
        android:layout_marginEnd="@dimen/layout_margin_padding_16"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/yandexsanstextmedium"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/layout_margin_padding_16"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@color/dark_blue" />

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_padding_16"
        android:layout_marginTop="@dimen/layout_margin_padding_16"
        android:layout_marginEnd="@dimen/layout_margin_padding_16"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/yandexsanstextmedium"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="normal"
        app:cornerRadius="@dimen/layout_margin_padding_16"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconTint="@color/dark_blue" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_padding_16"
        android:layout_marginTop="@dimen/layout_margin_padding_16"
        android:layout_marginEnd="@dimen/layout_margin_padding_16"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/yandexsanstextmedium"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/layout_margin_padding_16"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@color/dark_blue" />
</LinearLayout>
