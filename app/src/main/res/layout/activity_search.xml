<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_backToMain"
            style="@style/ButtonSettingsStyle"
            android:layout_width="@dimen/dp_44"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:contentDescription="@string/button_back"
            android:outlineProvider="none"
            app:icon="@drawable/arrow"
            app:iconGravity="end"
            app:iconPadding="@dimen/dp_52"
            app:iconSize="@dimen/dp_24" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yandexsanstextmedium"
            android:text="@string/search"
            android:textSize="@dimen/text_size_22" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1"
            android:background="@drawable/search_view_background"
            android:drawableStart="@drawable/search_grey"
            android:drawablePadding="8dp"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="@dimen/dp_8"
            android:src="@drawable/close_grey"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
