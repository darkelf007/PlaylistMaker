<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setttings.presentation.ui.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_backToMain"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/dp_44"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:contentDescription="@string/button_back"
            android:outlineProvider="none"
            app:icon="@drawable/arrow"
            app:iconGravity="end"
            app:iconPadding="@dimen/dp_52"
            app:iconSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/text_size_22" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/dark_theme"
            android:textSize="@dimen/text_size_16" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTheme"
            style="@style/SwitchStyle"
            android:layout_width="@dimen/dp_56"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:configChanges="uiMode"
            app:thumbTint="@color/switch_Knob_color"
            app:trackTint="@color/switch_track_color"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutToShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textToShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/to_share"
            android:textSize="@dimen/text_size_16"
            app:drawableRightCompat="@drawable/to_share" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutTextWriteToSupport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWriteToSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/write_to_support"
            android:textSize="@dimen/text_size_16"
            app:drawableRightCompat="@drawable/group" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutUserAgreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textUserAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/user_agreement"
            android:textSize="@dimen/text_size_16"
            app:drawableRightCompat="@drawable/arrow_button" />

    </FrameLayout>

</LinearLayout>
