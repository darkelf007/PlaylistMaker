<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_backToMain"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FEFEFE"
            android:visibility="visible"
            app:icon="@drawable/arrow"
            app:iconSize="24dp"
            app:iconTint="#000000"
            tools:outlineSpotShadowColor="#FEFEFE"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"


            android:layout_weight="1"
            android:fontFamily="@font/yandexsanstextmedium"
            android:text="@string/settings"
            android:textColor="@color/dark_blue"
            android:textSize="22sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:text="@string/dark_theme"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/small_text_size"
                tools:fontFamily="@font/yandexsanstextmedium" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:text="@string/to_share"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/small_text_size"
                tools:fontFamily="@font/yandexsanstextmedium" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/light_mode" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:text="@string/write_to_support"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/small_text_size"
                tools:fontFamily="@font/yandexsanstextmedium" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/group" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:text="@string/user_areement"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/small_text_size"
                tools:fontFamily="@font/yandexsanstextmedium" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/button" />

        </LinearLayout>
    </LinearLayout>
