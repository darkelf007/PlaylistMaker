<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonSettingsStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Search_placeholder_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:backgroundTint">@color/white_black</item>
    </style>

    <style name="Search_placeholder">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="player_text_style">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="track_info_style">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>


</resources>