<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonSettingsStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Search_placeholder_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:backgroundTint">@color/white_black</item>
    </style>

    <style name="Search_placeholder">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="player_text_style">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="track_info_style">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>


    <!-- MediaActivity -->
    <style name="new_playlist_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">@color/black_white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>

    </style>

    <style name="your_media_library">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/yandex_sans_text_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">@dimen/dp_312</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_240</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="no_playlist">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">240dp</item>
        <item name="android:fontFamily">@font/yandex_sans_text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>

    <!-- NavigationView -->
    <style name="bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/navigation_text</item>
        <item name="itemTextAppearanceInactive">@style/navigation_text</item>
    </style>

    <style name="navigation_text" parent="bottom_navigation">
        <item name="fontFamily">@font/yandex_sans_text_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <!-- NewPlaylist -->

    <style name="NewPlaylistButtonStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@drawable/create_playlist_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/yandex_sans_text_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextInputLayoutStyleNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/darkBlue_white</item>
        <item name="android:textColor">@color/darkBlue_white</item>

    </style>

    <style name="PlaylistBottomSheetModTextViewStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistBottomSheetCommonTextViewStyle">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <!-- Player -->
    <style name="BackgroundPlayerStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PlayerActivityButtonStyle" >
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Playlist_info -->

    <style name="PlaylistInfoCommonTextViewStyle">
        <item name="android:fontFamily">@font/yandex_sans_text_regular</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistInfoBoldTextViewStyle">
        <item name="android:fontFamily">@font/yandex_sans_text_bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistInfoBottomSheetTextViewStyle">
        <item name="android:fontFamily">@font/yandex_sans_text_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackListViewStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="tint">@color/dark_grey</item>
    </style>



    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/blue</item>
        <!-- Background tint for the button -->
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/blue</item>
        <!-- Background tint for the button -->
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>