<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonSettingsStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Search_placeholder_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:backgroundTint">@color/white_black</item>
    </style>

    <style name="Search_placeholder">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="player_text_style">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="track_info_style">
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <!-- MediaActivity -->
    <style name="new_playlist_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">@color/black_white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/yandexsanstextmedium</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>

    </style>

    <style name="your_media_library">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/yandexsanstextmedium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">@dimen/dp_312</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_240</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="no_playlist">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">240dp</item>
        <item name="android:fontFamily">@font/yandexsanstextmedium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>

    <!-- NavigationView -->
    <style name="bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/navigation_text</item>
        <item name="itemTextAppearanceInactive">@style/navigation_text</item>
    </style>

    <style name="navigation_text" parent="bottom_navigation">
        <item name="fontFamily">@font/yandexsanstextmedium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
</resources>